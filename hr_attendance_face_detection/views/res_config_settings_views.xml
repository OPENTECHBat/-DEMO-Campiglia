<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_face_attendance" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.face.attendance</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="81"/>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='hr_attendance']/block[@name='kiosk_mode_setting_container']" position="inside">
                <setting string="Face Attendance Locations" company_dependent="1">
                    <field name="multi_location_ids">
                        <list editable="bottom">
                            <field name="name" string="Location Name"/>
                            <field name="face_attendance_latitude" string="Latitude"/>
                            <field name="face_attendance_longitude" string="Longitude"/>
                            <field name="face_attendance_radius" string="Radius (meters)"/>
                        </list>

                    </field>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>

